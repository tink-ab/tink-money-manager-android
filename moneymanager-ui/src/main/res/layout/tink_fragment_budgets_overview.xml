<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <com.google.android.material.card.MaterialCardView
      android:id="@+id/card"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="16dp"
      android:layout_marginVertical="12dp"
      android:backgroundTint="?tink_cardBackgroundColor"
      app:cardCornerRadius="8dp"
      app:cardElevation="@dimen/tink_card_elevation_mid">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/mainContent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/title"
        style="@style/tink_h2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/tink_overview_budgets_title"
        app:layout_constraintEnd_toStartOf="@+id/newBudgetButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <com.google.android.material.button.MaterialButton
        android:id="@+id/newBudgetButton"
        style="?attr/tink_textButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/tink_overview_budgets_create_new"
        android:textColor="?attr/tink_createBudgetButtonColor"
        app:layout_constraintBaseline_toBaselineOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent" />

      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/budgetsOverviewList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:listitem="@layout/tink_budget_overview_item" />

      <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/budgetsEmptyIcon"
        android:layout_width="@dimen/tink_add_budget_icon_width"
        android:layout_height="@dimen/tink_add_budget_icon_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="?attr/tink_createBudgetIconBackgroundColor"
        android:clickable="true"
        android:contentDescription="@string/tink_budget_create_button"
        android:focusable="true"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="?attr/tink_createBudgetIconShapeStyle"
        app:srcCompat="?attr/tink_icon_add_button"
        app:tint="?attr/tink_createBudgetIconColor" />

      <com.google.android.material.button.MaterialButton
        android:id="@+id/emptyCreateNewButton"
        style="?attr/tink_textButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/tink_overview_budgets_empty_create_new"
        android:textColor="?attr/tink_createBudgetButtonColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/budgetsEmptyIcon"
        tools:text="Create New Budget" />

      <androidx.constraintlayout.widget.Group
        android:id="@+id/budgetsOverviewContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="title, newBudgetButton, budgetsOverviewList" />

      <androidx.constraintlayout.widget.Group
        android:id="@+id/budgetsEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="budgetsEmptyIcon, emptyCreateNewButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
      android:id="@+id/loader"
      android:layout_width="match_parent"
      android:layout_height="250dp">

      <include
        layout="@layout/tink_loader_spinner"
        android:visibility="visible" />

    </FrameLayout>

  </com.google.android.material.card.MaterialCardView>

</FrameLayout>
