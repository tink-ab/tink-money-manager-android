<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/labelRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/tink_category_icon_size"
        android:layout_height="@dimen/tink_category_icon_size"
        android:scaleType="center"
        app:shapeAppearance="?attr/tink_categoryIconShapeStyle" />

    <com.tink.moneymanagerui.view.TinkTextView
        android:id="@+id/pieChartText"
        style="@style/tink_nano.primary.autoSize"
        android:layout_width="@dimen/tink_category_label_text_width"
        android:layout_height="@dimen/tink_category_label_text_height"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="2dp"
        android:paddingTop="2dp" />

</LinearLayout>