<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  style="?attr/tink_cardviewStyle"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="16dp">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <View
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="?tink_cardBackgroundColor"
      app:layout_constraintBottom_toBottomOf="@+id/barrierSpace"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <View
      android:id="@+id/expensesByDayContainer"
      android:layout_width="0dp"
      android:layout_height="200dp"
      android:layout_marginTop="24dp"
      android:background="?tink_cardBackgroundColor"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/averageText" />

    <View
      android:id="@+id/averageExpensesByDayContainer"
      android:layout_width="0dp"
      android:layout_height="200dp"
      android:layout_marginTop="24dp"
      android:background="?tink_cardBackgroundColor"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/averageText" />

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/barChartContainer"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="@+id/averageExpensesByDayContainer"
      app:layout_constraintEnd_toEndOf="@+id/averageExpensesByDayContainer"
      app:layout_constraintStart_toStartOf="@+id/averageExpensesByDayContainer"
      app:layout_constraintTop_toTopOf="@+id/averageExpensesByDayContainer"
      >

      <com.tink.moneymanagerui.charts.BarChartWithAmountLabels
        android:id="@+id/averageExpensesChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        app:tink_horizontal_margin="8dp"
        app:tink_bar_color_below_threshold="?tink_expensesDarkColor"
        app:tink_bar_label_style="@style/tink_chart_label"
        app:tink_bar_width="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

      <com.tink.moneymanagerui.charts.BarChartWithAmountLabels
        android:id="@+id/totalExpensesChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        app:tink_horizontal_margin="8dp"
        app:tink_bar_color_below_threshold="?tink_expensesColor"
        app:tink_bar_label_style="@style/tink_chart_label"
        app:tink_bar_width="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/averageCircle"
      android:layout_width="14dp"
      android:layout_height="0dp"
      android:layout_marginEnd="4dp"
      android:src="@drawable/tink_circle"
      android:tint="?tink_expensesDarkColor"
      app:layout_constraintBottom_toBottomOf="@+id/averageText"
      app:layout_constraintEnd_toStartOf="@id/averageText"
      app:layout_constraintTop_toTopOf="@+id/averageText" />

    <TextView
      android:id="@+id/averageText"
      style="@style/tink_micro"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:layout_marginEnd="20dp"
      android:gravity="end|center_vertical"
      android:text="@string/tink_insights_expenses_by_day_average_text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <Space
      android:id="@+id/barrierSpace"
      android:layout_width="match_parent"
      android:layout_height="24dp"
      app:layout_constraintTop_toBottomOf="@+id/expensesByDayContainer" />

    <TextView
      android:id="@+id/title"
      style="@style/tink_hecto.bold"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginEnd="24dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/barrierSpace"
      tools:text="Expenses last week" />

    <TextView
      android:id="@+id/description"
      style="@style/tink_deci.primary"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="6dp"
      android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toTopOf="@+id/primaryButton"
      app:layout_constraintEnd_toEndOf="@+id/title"
      app:layout_constraintStart_toStartOf="@+id/title"
      app:layout_constraintTop_toBottomOf="@+id/title"
      tools:text="Expenses by day" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/primaryButton"
      style="?attr/tink_insightPrimaryActionButtonStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/description"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:text="Yes, sounds good!" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/secondaryButton"
      style="?attr/tink_insightSecondaryActionButtonStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toStartOf="@+id/primaryButton"
      app:layout_constraintTop_toTopOf="@+id/primaryButton"
      tools:text="No, archive" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
