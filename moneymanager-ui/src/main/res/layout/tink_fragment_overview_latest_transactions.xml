<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <com.google.android.material.card.MaterialCardView
      android:id="@+id/card"
      style="?attr/tink_cardviewStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="16dp"
      android:layout_marginVertical="12dp"
      android:visibility="gone"
      tools:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/mainContent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/title"
        style="@style/tink_h2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/tink_overview_latest_transactions_title"
        app:layout_constraintEnd_toStartOf="@+id/action"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <com.google.android.material.button.MaterialButton
        android:id="@+id/action"
        style="?attr/tink_textButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/tink_overview_latest_transactions_view_all_link"
        app:layout_constraintBaseline_toBaselineOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent" />

      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/latestTransactionsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:listitem="@layout/tink_transaction_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
      android:id="@+id/loader"
      android:layout_width="match_parent"
      android:layout_height="250dp">

      <include
        layout="@layout/tink_loader_spinner"
        android:visibility="visible"
        tools:visibility="gone" />

    </FrameLayout>

  </com.google.android.material.card.MaterialCardView>

</FrameLayout>
