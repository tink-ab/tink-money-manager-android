<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="16dp"
  app:cardBackgroundColor="?tink_cardBackgroundColor"
  app:cardCornerRadius="@dimen/tink_card_corner_radius"
  app:cardElevation="@dimen/tink_card_elevation">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
      android:id="@+id/insight_top_part"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="24dp"
      android:paddingBottom="20dp"
      android:background="?tink_expensesColor">

      <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconBackground"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tink_circle"
        android:backgroundTint="?tink_categoryExpensesBackgroundColor" />

      <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginStart="20dp"
        android:layout_centerHorizontal="true"
        app:tint="?tink_categoryExpensesColor" />

      <com.tink.moneymanagerui.insights.views.InsightBubbleView
        android:id="@+id/insightBubbleSavePercentageOutline"
        android:layout_width="56dp"
        android:layout_height="32dp"
        android:layout_marginStart="-20dp"
        android:layout_alignTop="@id/iconBackground"
        android:layout_toEndOf="@id/iconBackground"
        app:tink_bubbleBackgroundTint="?tink_expensesColor"
        app:tink_primaryTextStyle="@style/tink_micro.semibold"
        app:tink_textColor="?tink_expensesColor"
        tools:tink_primaryText="-10%"/>

      <com.tink.moneymanagerui.insights.views.InsightBubbleView
        android:id="@+id/insightBubbleSavePercentage"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_marginStart="-16dp"
        android:layout_marginTop="4dp"
        android:layout_alignTop="@id/iconBackground"
        android:layout_toEndOf="@id/iconBackground"
        app:tink_bubbleBackgroundTint="?tink_colorOnExpenses"
        app:tink_primaryTextStyle="@style/tink_micro.semibold"
        app:tink_textColor="?tink_expensesColor"
        tools:tink_primaryText="-10%"/>

      <TextView
        android:id="@+id/savePerYearText"
        style="@style/tink_micro.semibold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@id/iconBackground"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="?tink_colorOnExpenses"
        tools:text="You can save up to 420SEK per year" />

    </RelativeLayout>

    <include layout="@layout/tink_insight_title_description_actions"/>

  </LinearLayout>

</com.google.android.material.card.MaterialCardView>