<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:background="?attr/tink_backgroundColor">

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/bankLogo"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginVertical="16dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="@id/divider"
    android:src="@drawable/tink_ingested_account" />

  <androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/customerAccountContainer"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toRightOf="@id/bankLogo"
    app:layout_constraintRight_toLeftOf="@id/customerAccountBalance"
    android:layout_marginStart="16dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/customerAccountName"
      style="@style/tink_hecto"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:ellipsize="end"
      android:maxLines="1"
      tools:text="Savings account" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/customerAccountNumber"
      style="@style/tink_deci"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:maxLines="1"
      tools:text="1111 2222 3333 4444" />

    </androidx.appcompat.widget.LinearLayoutCompat>

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/customerAccountBalance"
    style="@style/tink_hecto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:paddingStart="10dp"
    android:maxLines="1"
    tools:text="$200" />

    <View
      android:id="@+id/divider"
      android:layout_width="0dp"
      android:layout_height="1dp"
      app:layout_constraintLeft_toLeftOf="@id/customerAccountContainer"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:background="@color/tink_divider_color" />

</androidx.constraintlayout.widget.ConstraintLayout>