<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="button" parent="Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:textColor">?tink_colorOnAccent</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:fontFamily">@font/tink_font_bold</item>
    <item name="android:background">@drawable/button_background_white_ripple</item>
    <item name="android:backgroundTint">@color/button_default_background_color</item>
    <item name="android:textSize">@dimen/deci_text_size</item>
    <item name="lineHeight">@dimen/deci_line_height</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
    <item name="android:elevation">@dimen/button_elevation</item>
  </style>
  <style name="Button.Default" parent="Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:textColor">?tink_colorAccent</item>
    <item name="android:fontFamily">@font/tink_font_bold</item>
    <item name="android:textSize">@dimen/deci_text_size</item>
    <item name="android:textAllCaps">false</item>
  </style>
  <style name="primaryButton" parent="Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:textColor">?tink_colorAccent</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:fontFamily">@font/tink_font_bold</item>
    <item name="android:background">@color/transparent</item>
    <item name="android:foreground">?selectableItemBackground</item>
    <item name="android:textSize">@dimen/deci_text_size</item>
    <item name="lineHeight">@dimen/deci_line_height</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
    <item name="android:elevation">0dp</item>
  </style>

  <style name="secondaryButton" parent="primaryButton">
    <item name="android:fontFamily">@font/tink_font_regular</item>
  </style>
</resources>