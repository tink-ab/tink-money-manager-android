<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable
      name="viewModel"
      type="com.tink.pfmui.overview.accounts.AccountDetailsViewModel" />
    <variable
      name="transactionListModel"
      type="com.tink.pfmui.transaction.TransactionListViewModel" />
  </data>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?tink_backgroundColor"
    tools:ignore="ContentDescription">

    <com.tink.pfmui.view.TinkToolbar
      android:id="@+id/tink_toolbar"
      android:layout_width="match_parent"
      android:layout_height="?actionBarSize"
      android:transitionName="@string/tink_toolbar_transition"
      app:buttonGravity="center_vertical"
      app:navigationIcon="?homeAsUpIndicator" />

    <com.tink.pfmui.view.TinkTextView
      style="@style/tink_tera"
      android:id="@+id/accountBalance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/tink_toolbar"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="24dp" />

    <com.tink.pfmui.view.TinkTextView
      style="@style/tink_hecto"
      android:id="@+id/accountNumber"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/accountBalance"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="4dp" />

    <View
      android:id="@+id/divider"
      android:layout_width="16dp"
      android:layout_height="1dp"
      android:layout_below="@id/accountNumber"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="16dp"
      android:visibility="gone" />

    <com.tink.pfmui.view.TinkTextView
      style="@style/tink_micro.primary"
      android:id="@+id/extraText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/divider"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="16dp"
      android:gravity="center"
      android:visibility="gone" />

    <View
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentBottom="true"
      android:layout_marginTop="@dimen/tink_account_details_header_height_plus_spacing"
      android:background="?tink_backgroundColor" />

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:clipToPadding="false"
      android:paddingTop="@dimen/tink_account_details_header_height_plus_spacing"
      android:paddingBottom="8dp"
      android:visibility="@{transactionListModel.hasTransactions}" />

    <include
      android:id="@+id/loader"
      layout="@layout/tink_loader_spinner" />

  </RelativeLayout>

</layout>
