<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="16dp"
  app:cardBackgroundColor="?tink_cardBackgroundColor"
  app:cardCornerRadius="@dimen/card_corner_radius">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <View
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="?tink_cardBackgroundColor"
      app:layout_constraintBottom_toBottomOf="@+id/barrierSpace"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <!-- TODO: PFMSDK: Replace this with the bar charts -->
    <View
      android:id="@+id/statisticsByDay"
      android:layout_width="0dp"
      android:layout_height="128dp"
      android:layout_marginTop="24dp"
      android:background="?tink_expensesLightColor"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/description" />

    <TextView
      android:id="@+id/description"
      style="@style/hecto.bold"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="48dp"
      app:layout_constraintEnd_toStartOf="@+id/averageText"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Expenses by day" />

    <ImageView
      android:id="@+id/averageCircle"
      android:layout_width="14dp"
      android:layout_height="0dp"
      android:layout_marginEnd="4dp"
      android:src="@drawable/circle"
      android:tint="?tink_expensesLightColor"
      app:layout_constraintBottom_toBottomOf="@+id/averageText"
      app:layout_constraintEnd_toStartOf="@id/averageText"
      app:layout_constraintTop_toTopOf="@+id/averageText" />

    <TextView
      android:id="@+id/averageText"
      style="@style/micro"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_marginEnd="24dp"
      android:gravity="end|center_vertical"
      android:text="@string/insights_expenses_by_day_average_text"
      app:layout_constraintBottom_toBottomOf="@+id/description"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/description" />

    <Space
      android:id="@+id/barrierSpace"
      android:layout_width="match_parent"
      android:layout_height="16dp"
      app:layout_constraintTop_toBottomOf="@+id/statisticsByDay" />


    <Button
      android:id="@+id/primaryButton"
      style="@style/primaryButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/barrierSpace"
      tools:text="Yes, sounds good!" />

    <Button
      android:id="@+id/secondaryButton"
      style="@style/secondaryButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toStartOf="@+id/primaryButton"
      app:layout_constraintTop_toTopOf="@+id/primaryButton"
      tools:text="No, archive" />

    <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="gone" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
