<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/root"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/tink_standard_row_background">

  <com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/icon"
    android:layout_width="@dimen/tink_category_icon_size"
    android:layout_height="@dimen/tink_category_icon_size"
    android:layout_margin="16dp"
    android:scaleType="center"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:shapeAppearance="?attr/tink_categoryIconShapeStyle"
    tools:srcCompat="@drawable/tink_category_healthandbeauty" />

  <View
      android:layout_width="6dp"
      android:layout_height="6dp"
      android:id="@+id/cornerIconBackgroundView"
      android:background="@color/tink_white"
      android:visibility="gone"
      app:layout_constraintStart_toStartOf="@id/cornerIcon"
      app:layout_constraintEnd_toEndOf="@id/cornerIcon"
      app:layout_constraintTop_toTopOf="@id/cornerIcon"
      app:layout_constraintBottom_toBottomOf="@id/cornerIcon"
      tools:visibility="visible"/>

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/cornerIcon"
      app:layout_constraintEnd_toEndOf="@+id/icon"
      app:layout_constraintBottom_toBottomOf="@+id/icon"
      app:tint="?tink_colorAccent"
      android:visibility="gone"
      tools:visibility="visible"
      android:src="@drawable/tink_clock"
      tools:ignore="ContentDescription" />

  <Space
    android:id="@+id/spacer"
    android:layout_width="2dp"
    android:layout_height="2dp"
    app:layout_constraintBottom_toTopOf="@+id/icon"
    app:layout_constraintStart_toEndOf="@+id/icon" />

  <TextView
    android:id="@+id/label"
    style="@style/tink_hecto"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="0dp"
    android:layout_marginStart="76dp"
    android:layout_marginEnd="16dp"
    android:ellipsize="end"
    android:maxLines="1"
    app:layout_constraintBottom_toTopOf="@id/description"
    app:layout_constraintEnd_toStartOf="@+id/amount"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Taxi Kurir"/>

  <TextView
    android:id="@+id/description"
    style="@style/tink_deci"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="76dp"
    android:layout_marginEnd="16dp"
    android:ellipsize="end"
    android:maxLines="1"
    android:visibility="visible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/amount"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/label"
    tools:text="Lordag 3 mar"/>

  <TextView
    android:id="@+id/amount"
    style="@style/tink_hecto"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:textAlignment="viewEnd"
    app:layout_constraintBottom_toTopOf="@id/dispensableAmount"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/label"
    tools:text="-599 kr"/>

  <TextView
    android:id="@+id/dispensableAmount"
    style="@style/tink_deci"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:textAlignment="viewEnd"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/description"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/amount"
    tools:text="-199 kr"/>

  <View
    android:id="@+id/divider"
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_marginEnd="16dp"
    android:background="?tink_dividerColor"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@id/label"/>

</androidx.constraintlayout.widget.ConstraintLayout>