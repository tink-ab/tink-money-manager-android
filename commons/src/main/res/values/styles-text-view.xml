  <style name="giga.autoSize" parent="giga">
    <item name="autoSizeTextType">uniform</item>
    <item name="autoSizeMaxTextSize">25sp</item>
    <item name="autoSizeMinTextSize">11sp</item>
    <item name="autoSizeStepGranularity">1sp</item>
  </style>

  <style name="giga.inverted">
    <item name="android:textColor">@color/white</item>
  </style>

