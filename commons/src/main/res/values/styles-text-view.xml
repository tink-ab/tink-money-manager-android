<?xml version="1.0" encoding="utf-8"?>
<resources>

  <item name="font_bold" type="font">@font/lota_grotesque_bold</item>
  <item name="font_semi_bold" type="font">@font/lota_grotesque_semi_bold</item>
  <item name="font_regular" type="font">@font/lota_grotesque_regular</item>

  <style name="h2">
    <item name="android:textColor">?android:textColorTertiary</item>
    <item name="android:fontFamily">@font/font_regular</item>
    <item name="android:textSize">@dimen/h2_text_size</item>
    <item name="lineHeight">@dimen/h2_line_height</item>
    <item name="android:letterSpacing">0</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="h2.inverted">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="h2.action">
    <item name="android:textColor">?tink_textColorAction</item>
    <item name="android:fontFamily">@font/font_bold</item>
    <item name="android:textAllCaps">false</item>
  </style>

