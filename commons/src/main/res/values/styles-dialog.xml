<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="TinkMaterialAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
    <item name="colorSurface">?tink_backgroundColor</item>
    <item name="colorPrimary">?tink_colorPrimary</item>
    <item name="colorOnSurface">?tink_textColorPrimary</item>
    <item name="textColorAlertDialogListItem">?tink_textColorPrimary</item>
    <item name="materialAlertDialogTitleTextStyle">@style/TinkMaterialAlertDialogTitleTextStyle</item>
    <item name="materialAlertDialogBodyTextStyle">@style/TinkMaterialAlertDialogBodyTextStyle</item>
  </style>

  <style name="TinkMaterialAlertDialogBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
    <item name="android:textAppearance">@style/tink_hecto</item>
    <item name="android:textColor">?tink_textColorPrimary</item>
    <item name="android:fontFamily">@font/tink_font_regular</item>
  </style>

  <style name="TinkMaterialAlertDialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
    <item name="android:textAppearance">@style/tink_hecto.bold</item>
    <item name="android:textColor">?tink_textColorPrimary</item>
    <item name="android:fontFamily">@font/tink_font_regular</item>
  </style>

  <style name="TinkDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">?tink_colorPrimary</item>
    <item name="android:textColorPrimary">?tink_textColorPrimary</item>
    <item name="android:textColorSecondary">?tink_textColorSecondary</item>
    <item name="colorControlActivated">?tink_colorAccent</item>
    <item name="colorControlHighlight">?tink_colorAccent</item>
    <item name="buttonBarPositiveButtonStyle">?tink_textButtonStyle</item>
    <item name="buttonBarNegativeButtonStyle">?tink_textButtonStyle</item>
    <item name="android:windowBackground">?tink_cardBackgroundColor</item>
    <item name="android:fontFamily">@font/tink_font_regular</item>
  </style>
</resources>
